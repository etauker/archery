<mvc:View
	controllerName="com.etauker.security.login.createUser.CreateUser"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<Page title="{i18n>CREATE_USER.title}" class="sapUiResponsiveContentPadding"
		showNavButton="true" navButtonPress="handleNavBack">

		<content>
				<Label text="{i18n>CREATE_USER.username}" />
				<Input type="Text" value="{user>/username}" />
				<Label text="{i18n>CREATE_USER.password}" />
				<Input type="Password" value="{user>/password}"/>
				<Label text="{i18n>CREATE_USER.repeatPassword}" />
				<Input type="Password" value="{user>/passwordRepeat}"/>

				<Button text="{i18n>BUTTONS.create}" press="handleCreate" />
				<Button text="{i18n>BUTTONS.cancel}" press="handleCancel" />
		</content>
	</Page>
</mvc:View>

<mvc:View
	controllerName="com.etauker.glucose.readings.Readings"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" width="100%">

	<VBox width="100%">
		<List items="{readings>/readings}" >
			<items>
				<StandardListItem
					title="{readings>location}"
					description="{readings>type}">
				</StandardListItem>
			</items>
			<headerToolbar>
				<Toolbar>
					<!-- <ToolbarSpacer /> -->
					<Title text="" level="H2" textAlign="Center"/>
					<ToolbarSpacer />
					<Button
						icon="sap-icon://add"
						press="onAddReading" />
					<!-- <Button -->
						<!-- icon="sap-icon://person-placeholder" -->
						<!-- press="handleButtonPress" /> -->
					<!-- <Button -->
						<!-- icon="sap-icon://drop-down-list" -->
						<!-- press="handleButtonPress" /> -->
				</Toolbar>
			</headerToolbar>
		</List>
	</VBox>

</mvc:View>

<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog confirm="handleFilterDialogConfirm">
		<filterItems>
			<ViewSettingsFilterItem
				text="Reading Groups"
				key="filterByReadingGroups"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="Low" key="low" />
					<ViewSettingsItem text="Good" key="good" />
					<ViewSettingsItem text="High" key="high" />
					<ViewSettingsItem text="Very High" key="veryHigh" />
				</items>
			</ViewSettingsFilterItem>

			<ViewSettingsFilterItem
				text="Meal"
				key="filterByMeals"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="Before Work" key="Before Work" />
					<ViewSettingsItem text="Breakfast" key="Breakfast" />
                    <ViewSettingsItem text="Lunch" key="Lunch" />
                    <ViewSettingsItem text="Dinner" key="Dinner" />
                    <ViewSettingsItem text="Before Bed" key="Before Bed" />
				</items>
			</ViewSettingsFilterItem>

			<ViewSettingsFilterItem
				text="Day"
				key="filterByDays"
				multiSelect="true">
				<items>
					<ViewSettingsItem text="Monday" key="Monday" />
					<ViewSettingsItem text="Tuesday" key="Tuesday" />
					<ViewSettingsItem text="Wednesday" key="Wednesday" />
					<ViewSettingsItem text="Thursday" key="Thursday" />
					<ViewSettingsItem text="Friday" key="Friday" />
					<ViewSettingsItem text="Saturday" key="Saturday" />
					<ViewSettingsItem text="Sunday" key="Sunday" />
				</items>
			</ViewSettingsFilterItem>

			<!-- <ViewSettingsFilterItem
				text="Date and Time"
				key="filterByTimestamp"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="Before Work" key="Before Work" />
					<ViewSettingsItem text="Breakfast" key="Breakfast" />
					<ViewSettingsItem text="Lunch" key="Lunch" />
					<ViewSettingsItem text="Dinner" key="Dinner" />
					<ViewSettingsItem text="Before Bed" key="Before Bed" />
				</items>
			</ViewSettingsFilterItem> -->

		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>

<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">

	<VBox class="sapUiSmallMargin">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			title=""
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="3"
			columnsL="2"
			columnsM="2"
			singleContainerFullSize="false" >

			<f:content>
				<core:Title text="Context" />

				<Label text="Session Type" />
				<!-- <Text text="{new>/type}" /> -->
				<Select items="{path: 'sessions>/options/sessionTypes/'}">
					<core:Item key="{path: 'sessions>'}" text="{path: 'sessions>'}" />
				</Select>

				<Label text="Location" />
				<!-- <Text text="{new>/location}" /> -->
				<Input type="Text" text="{new>/location}" />

				<Label text="Session Identifier" />
				<!-- <Text text="{new>/identifier}" /> -->
				<Input type="Text" text="{new>/identifier}" />

				<Label text="Date" />
				<!-- <Text text="{new>/date}" /> -->
				<DatePicker selectedKey="{new>/date}" />

				<Label text="Start Time" />
				<!-- <Text text="{new>/startTime}" /> -->
				<TimePicker selectedKey="{new>/startTime}" />







				<core:Title text="Details" />

				<Label text="Session Category" />
				<!-- <Text text="{new>/type}" /> -->
				<Select items="{path: 'sessions>/options/sessionCategories/'}">
					<core:Item key="{path: 'sessions>'}" text="{path: 'sessions>'}" />
				</Select>

				<Label text="Arrow Count" />
				<!-- <Text text="{new>/location}" /> -->
				<Input type="Number" text="{new>/arrowCount}" />

				<Label text="Distance" />
				<Select items="{path: 'sessions>/options/distances/'}">
					<core:Item key="{path: 'sessions>'}" text="{path: 'sessions>'}" />
				</Select>

				<Label text="Target Face" />
				<Select items="{path: 'sessions>/options/targetFaces/'}">
					<core:Item key="{path: 'sessions>'}" text="{path: 'sessions>'}" />
				</Select>

				<Label text="Bow Category" />
				<Select items="{path: 'sessions>/options/bowCategories/'}">
					<core:Item key="{path: 'sessions>'}" text="{path: 'sessions>'}" />
				</Select>

				<core:Title text="Notes" />
				<!-- <RatingIndicator value="{Rating}" displayOnly="true" /> -->

				<Label text="Notes" />
				<!-- <Text text="{new>/notes}" /> -->
				<Input type="Text" text="{new>/notes}" />
				<!-- <ProgressIndicator percentValue="{Disposable}" displayOnly="true" /> -->
			</f:content>
		</f:SimpleForm>
	<!-- type: "Training", -->
	<!-- location: "Home", -->
	<!-- identifier: "Evening" -->
	<!-- date: "22/06/2018", -->
	<!-- startTime: "19:30", -->

	<!-- sessionCategory: "Indoor", -->
	<!-- arrowCount: 30, -->
	<!-- distance: "18m", -->
	<!-- targetFaceType: "3 spot", -->
	<!-- bowCategory: "Recurve", -->

	<!-- notes: "Tired after work.", -->
	</VBox>

</core:FragmentDefinition>

<mvc:View
	controllerName="com.etauker.archery.sessions.controller.AddSession"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" width="100%">
	<Page title="Add Session" class="sapUiResponsiveContentPadding" showNavButton="true">
		<headerContent>
			<Button icon="sap-icon://log" tooltip="Logout" press="onLogout"/>
			<!-- <Button icon="sap-icon://log" tooltip="Logout" press="onLogout"/> -->
		</headerContent>
		
		<content>	
			<VBox id="main" binding="{sessions>/sessions}">
				<core:Fragment fragmentName="com.etauker.archery.sessions.fragment.DisplayForm" type="XML" />
			</VBox>
			
			<VBox id="unauthorised">
				<core:Fragment fragmentName="com.etauker.security.fragments.Unauthorised" type="XML" />
			</VBox>
			
			<VBox id="forbidden">
				<core:Fragment fragmentName="com.etauker.security.fragments.Forbidden" type="XML" />
			</VBox>
		</content>
		<footer>
			<Toolbar visible="true">
				<ToolbarSpacer/>
				<Button text="Save and Continue" type="Accept" press="onSaveAndContinue"/>
				<Button text="Save" type="Accept" press="onSave"/>
				<Button text="Cancel" type="Reject" press="onCancel"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>

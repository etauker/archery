<mvc:View
	controllerName="com.etauker.archery.controller.Home"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding" showNavButton="true">
		<headerContent>
			<Button icon="sap-icon://log" tooltip="Logout" press="onLogout"/>
			<!-- <Button icon="sap-icon://log" tooltip="Logout" press="onLogout"/> -->
		</headerContent>
		<!-- <subHeader>
			<Toolbar>
				<SearchField />
			</Toolbar>
		</subHeader> -->
		<content>
			
			<VBox id="main">
				<HBox justifyContent="Center" width="100%">
					<SegmentedButton selectedKey="{preferences>/appHome/defaultTab}" width="100%">
						<layoutData>
							<FlexItemData minWidth="100%"/>
						</layoutData>
						<items>
							<SegmentedButtonItem text="Scores" key="scores" press="onTabSelect" visible="{parts: [{path: 'security>/APP_ROLES/Archer'}, {path: 'security>/JWT'}], formatter: '.permissions.check'}"/>
							<SegmentedButtonItem text="Sessions" key="sessions" press="onTabSelect" visible="{parts: [{path: 'security>/APP_ROLES/Archer'}, {path: 'security>/JWT'}], formatter: '.permissions.check'}"/>
							<SegmentedButtonItem text="Seasons" key="seasons" press="onTabSelect" visible="{parts: [{path: 'security>/APP_ROLES/Archer'}, {path: 'security>/JWT'}], formatter: '.permissions.check'}"/>
							<!-- <SegmentedButtonItem text="Admin" key="admin" /> -->
						</items>
					</SegmentedButton>			
				</HBox>
				<VBox id="tab">
					<HBox justifyContent="Center" width="100%" id="scores">
						<mvc:XMLView viewName="com.etauker.archery.view.Scores" width="100%">
							<mvc:layoutData>
								<FlexItemData minWidth="100%"/>
							</mvc:layoutData>
						</mvc:XMLView>
					</HBox>
					<HBox justifyContent="Center" width="100%" id="sessions">
						<mvc:XMLView viewName="com.etauker.archery.sessions.view.Sessions" minWidth="100%">
							<mvc:layoutData>
								<FlexItemData minWidth="100%"/>
							</mvc:layoutData>
						</mvc:XMLView>
					</HBox>
					<HBox justifyContent="Center" width="100%" id="seasons">
						<mvc:XMLView viewName="com.etauker.archery.view.Seasons" width="100%">
							<mvc:layoutData>
								<FlexItemData minWidth="100%"/>
							</mvc:layoutData>
						</mvc:XMLView>
					</HBox>
				</VBox>
			</VBox>
			
			<VBox id="unauthorised">
				<core:Fragment fragmentName="com.etauker.security.fragments.Unauthorised" type="XML" />
			</VBox>
			
			<VBox id="forbidden">
				<core:Fragment fragmentName="com.etauker.security.fragments.Forbidden" type="XML" />
			</VBox>
		</content>
	</Page>
</mvc:View>

<mvc:View
	controllerName="com.etauker.archery.controller.Login"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<!-- xmls:form="sap.ui.layout.form"> -->
	<Page title="{i18n>homePageTitle}" class="sapUiResponsiveContentPadding">
		<headerContent>
			<Button icon="sap-icon://add" tooltip="Create Account" press="onCreateAccount"/>
			<!-- <Button icon="sap-icon://log" tooltip="Logout" press="onLogout"/> -->
		</headerContent>
		<content>
			<!-- <form:SimpleForm> -->
				<Label text="Username" />
				<Input  type="Text" value="{login>/username}" />
				<Label text="Password" />
				<Input  type="Password" value="{login>/password}"/>
				<Button text="Login" press="onLogin">
			</Button> 
		</content>
	</Page>
</mvc:View>

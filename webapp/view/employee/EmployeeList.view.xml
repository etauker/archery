<mvc:View
	controllerName="com.etauker.archery.controller.employee.EmployeeList"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page id="employeeListPage" title="{i18n>EmployeeList}"
		showNavButton="true"
		navButtonPress="onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<HBox id="main">
				<List id="employeeList" headerText="{i18n>ListOfAllEmployees}" items="{/Employees}">
					<items>
						<StandardListItem
							title="{FirstName} {LastName}"
							iconDensityAware="false"
							iconInset="false"
							type="Navigation"
							press="onListItemPressed"/>
					</items>
				</List>
			</HBox>
			<VBox id="unauthorised">
				<core:Fragment fragmentName="com.etauker.security.fragments.Unauthorised" type="XML" />
			</VBox>
			<VBox id="forbidden">
				<core:Fragment fragmentName="com.etauker.security.fragments.Forbidden" type="XML" />
			</VBox>
		</content>
	</Page>
</mvc:View>
